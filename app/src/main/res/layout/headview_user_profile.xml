<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.soloask.android.view.BoundImageView
            android:id="@+id/img_user_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/item_common_margin"
            android:background="@drawable/ic_me_default" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Steven Curry"
            android:textColor="@color/color_user_name"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:text="Philosophersthinkers1234567890123456"
            android:textColor="@color/color_user_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_user_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/item_common_margin"
            android:layout_marginRight="@dimen/item_common_margin"
            android:layout_marginTop="20dp"
            android:text="Why did you choose as the star points A platform ? You have to check-in fee it ? How high ? On what charge ?"
            android:textColor="@color/color_user_name"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_ask_question"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_common_margin"
                android:layout_marginRight="@dimen/item_common_margin"
                android:layout_marginTop="@dimen/item_common_margin"
                android:background="@drawable/selector_edit_text"
                android:gravity="start"
                android:hint="@string/hint_ask_question"
                android:maxLength="100"
                android:minHeight="96.0dip"
                android:paddingBottom="32.0dip"
                android:paddingLeft="14dip"
                android:paddingRight="14dip"
                android:paddingTop="14dip"
                android:textColorHint="#ffb9b9b9"
                android:textCursorDrawable="@null"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/tv_edit_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/edit_ask_question"
                android:layout_alignRight="@id/edit_ask_question"
                android:layout_marginBottom="10.0dip"
                android:layout_marginRight="9.599976dip"
                android:text="0/100"
                android:textColor="#ffc3c3c3"
                android:textSize="12.0sp"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_common_margin"
            android:layout_marginRight="@dimen/item_common_margin"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_question_nameless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:buttonTint="@color/colorPrimary"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/check_ask_question"
                android:textColor="@color/color_user_title"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_question_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="$0.99"
            android:textColor="@color/color_common_red"
            android:textSize="20sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_submit_question"
            style="@style/CommonButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="10dp"
            android:text="@string/btn_finish" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_user_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/item_common_margin"
        android:paddingTop="10dp"
        android:text="Answered 121 questions"
        android:textColor="@color/color_user_title"
        android:textSize="13sp" />

</LinearLayout>